
<b><%= @vehicle.vehicle_year %> <%= @vehicle.make %> <%= @vehicle.model %></b>
    <p>Purchased on <%= @vehicle.purchase_date.strftime('%d %b %Y') %> for $<%= @vehicle.purchase_price %></p>
    <p>Sold on <%= @vehicle.sale_date.strftime('%d %b %Y') %> for $<%= @vehicle.sale_price %></p>
    <ul>
    	<li><b>Costs</b></li>
    <% @vehicle.costs.each do |c| %>
      
        <li><%= c.recipient %> - $<%= c.price %>  
        	<form action="/costs/destroy/<%= c.id %>">
        		<button type="submit">destroy</button>
        		<input type="hidden" name="cost[vehicle_id]" value="<%= @vehicle.id %>">
        	</form>
    	</li>
       
    <% end %>
    </ul>
    <p>
    	<form action="/costs/new/<%= @vehicle.id %>" method="GET"><button type="submit">Add a cost</button></form>
    </p>

<b>Margin: $<%= @price %></b>